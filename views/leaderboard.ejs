<%- include("partials/header.ejs") %>

<div class="container leaderboard">
  <h1>ğŸ† Flag Guessing Leaderboard</h1>

  <% if (highscores && highscores.length > 0) { %>
    <div class="leaderboard-table-wrapper">
      <table class="leaderboard-table">
        <thead> 
          <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Highest Streak</th>
            <th>Total Correct</th>
            <th>Accuracy</th>
          </tr>
        </thead>
        <tbody>
          <% highscores.forEach((player, index) => { %>
            <tr>
              <td data-label="Rank"><%= index + 1 %></td>
              <td data-label="Username"><%= player.username %></td> 
              <td data-label="Highest Streak"><%= player.highest_streak %></td>
              <td data-label="Total Correct"><%= player.total_correct %></td>
              <td data-label="Accuracy"><%= player.accuracy %>%</td>
            </tr>
          <% }) %> 
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p>No scores yet â€” be the first to play!</p>
  <% } %>

  <div class="actions">
    <a href="/flagguess" class="btn">Back to Game</a>
    <a href="/leaderboard" class="btn">Refresh</a>
  </div>
</div>

<%- include("partials/footer.ejs") %>
